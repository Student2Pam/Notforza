@page
@model Downloads.Pages_PlayerStats.DeleteModel

@{
    ViewData["IsColourful"] = true;
    ViewData["Title"] = "Ban";
}

<h1>BAN</h1>

<h3>Are you sure you want to ban this player?</h3>
<div>
    <h4>PlayerStats</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerStats.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerStats.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerStats.Currency)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerStats.Currency)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerStats.SocialLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerStats.SocialLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerStats.RankLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerStats.RankLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerStats.XP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerStats.XP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerStats.HouseLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerStats.HouseLocation)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="PlayerStats.PlayerID" />
        <input type="submit" value="Ban" class="btn btn-danger" /> |
        <a asp-page="/Admin/AdminPlayer">Back to List</a>
    </form>
</div>
